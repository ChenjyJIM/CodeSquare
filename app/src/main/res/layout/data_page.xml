<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:text="店铺数据分析"
        android:gravity="center"
        android:textSize="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="296dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="人流量最多时间段:\n 11:00~14:00 \n 排除凌晨（0~6）"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="324dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="人流量最少时间段:\n 20:00~23:00 \n 排除凌晨（0~6）" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="372dp"
        android:layout_height="141dp"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="211dp"
        android:layout_height="match_parent"
        android:src="@drawable/cake" />


        <Button
            android:id="@+id/button11"
            android:layout_width="192dp"
            android:layout_height="match_parent"
            android:text="查看更多" />
    </LinearLayout>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="215dp"
        android:layout_height="42dp"
        android:src="@drawable/data"/>
    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:textSize="18dp"
        android:text="年龄段在15岁以下最中意产品:产品1"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="18dp"
        android:text="年龄段在15~25岁最中意产品:产品1"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:textSize="18dp"
        android:text="年龄段在25~40岁最中意产品:产品3"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:textSize="18dp"
        android:text="年龄段在40岁以上最中意产品:产品2"
        android:gravity="center"/>

</LinearLayout>
